<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TINNY SHOP</title>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="shortcut icon" href="images/NLYY.png" type="image/x-icon">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
    <%-  include('nav') %>

    <div class="container">
        <section class="c-1">
            <div class="content-1">
                <div class="slide-container">
                    <div class="slide fade">
                        <a href="">
                            <img src="images/slide1.gif" alt="slide1">
                        </a>
                    </div>
                    <div class="slide fade">
                        <a href="">
                            <img src="images/slide2.gif" alt="slide2">
                        </a>
                    </div>
                    <div class="slide fade">
                        <a href="">
                            <img src="images/slide3.gif" alt="slide3">
                        </a>
                    </div>

                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
                </div>
                <div style="text-align:center">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                  </div>
            </div>
        </section>

        <section class="c-2">
            <div class="content-2">
                <h2>สินค้ามาใหม่</h2>
                <div class="products-rows" id="productCarousel">
                    <% Object.values(products).forEach(function (item) {%>
                    <div class="product">
                        <div class="img-product">
                            <img src="images/products/<%= item.productpic %>" alt="ภาพสินค้า">
                        </div>
                        <h2 class="name-product"><%= item.nameproduct %></h2>
                        <p class="price"><%= item.price %> บาท</p>
                        <button class="onder"><a href="<%= item.linkproduct %>">สั้งซื้อสินค้า</a></button>
                    </div>
                    <% }) %>

                    <a class="prev-product" onclick="prevProduct()">&#10094;</a>
                    <a class="next-product" onclick="nextProduct()">&#10095;</a>
                </div>
            </div>
        </section>
    </div>


    <footer class="blibli-footer">
        <div class="container-f">
          <div class="footer-content">
            <div class="footer-logo">
              <!-- Your logo goes here -->
              <img src="images/logo-e.svg" alt="Your Logo">
            </div>
            <div class="footer-links">
              <ul>
                <li><a href="\">หน้าหลัก</a></li>
                <li><a href="/product">สินค้า</a></li>
                <li><a href="/contack">ติดต่อ</a></li>
              </ul>
            </div>
            <div class="footer-social">
              <!-- Your social media icons go here -->
              <a href="https://web.facebook.com/profile.php?id=61550041646622"><img src="images/facebook-svgrepo-com.svg" alt="Facebook"></a>
            </div>
          </div>
          <div class="footer-bottom">
            <p>&copy; 2023 TINNY SHOP. All rights reserved.</p>
          </div>
        </div>
      </footer>
    <script src="/js/menu-icon.js"></script>
    <script src="/js/slide.js"></script>
    <script src="/js/product.js"></script>
</body>
</html>